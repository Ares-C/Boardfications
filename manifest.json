{
  "name": "Boardfications",
  "version": "0.3.0",
  "default_locale": "en",
  "description": "Manage your League Boards' notifications!",
  "browser_action": {
      "default_title": "Boardfications",
      "default_icon": "images/icon.png",
      "default_popup": "documents/popup.html"
  },
  "icons": { 
  	   "16": "images/icon.png",
  	   "48": "images/icon48.png"
  },
  "manifest_version": 2,
  "incognito": "split",
  "background": {
	  "scripts": [
			"scripts/background.js"
		]
  },
  "permissions": [
    "http://boards.las.leagueoflegends.com/",
    "notifications",
    "storage",
	"cookies"
  ],
  "optional_permissions": ["http://*.leagueoflegends.com/"],
  "options_ui": {
    "page": "documents/options/options.html",
	"open_in_tab": true
  },
  "web_accessible_resources": [
    "images/icon48.png",
	"stylesheets/options/options.css"
  ]
}