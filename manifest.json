{
  "name": "Boardfications",

  "version": "0.2.2",

  "description": "Manage and get notified about your League of Legends Boards' notifications!",

  "browser_action": {
      "default_title": "Boardfications",
      "default_icon": "images/icon.png",
      "default_popup": "documents/popup.html"
  },

  "icons": { 
  	   "16": "images/icon.png",
  	   "48": "images/icon48.png"
  },

  "manifest_version": 2,
  "incognito": "split",

  "background": {
    "scripts": ["scripts/background.js"]
  },

  "permissions": [
    "http://boards.las.leagueoflegends.com/",
    "notifications",
    "tabs",
    "storage"
  ],

  "options_ui": {
    "page": "documents/options/options.html",
    "chrome_style": true
  },

  "web_accessible_resources": [
    "images/icon48.png"
  ],
  "update_url": "http://aresmta.github.io/boardfications/updates.xml"
} 



